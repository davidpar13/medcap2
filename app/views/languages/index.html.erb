<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-xl text-cyan-800">Languages</h1>
    <%= link_to "New Language", new_language_path, class: "rounded-lg py-2 px-2 bg-cyan-800 text-white block font-small" %>
  </div>

  <div>
    <table class="table-auto w-full whitespace-nowrap mt-6 border-b border-gray-200">
      <thead class="bg-slate-100 text-left">
      <tr class="border-b border-gray-200">
        <th class="px-3 py-3">Language Name</th>
        <th class="px-3 py-3">Active</th>
        <th colspan="2" class="px-3 py-3"></th>
      </tr>
      </thead>
      <tbody>
      <% @languages.each do |language| %>
        <tr class="border-b border-gray-200">
          <td class="px-3 py-3">
            <%= language.language_name %>
          </td>
          <td class="px-3 py-3">
            <%= language.active %>
          </td>
          <td class="px-3 py-3">
            <%= link_to language_path(language) do %>
              <i class="fa-solid fa-magnifying-glass"></i>
            <% end %>
          </td>
          <td class="px-3 py-3">
            <%= link_to edit_language_path(language) do %>
              <i class="fa-solid fa-user-pen"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
