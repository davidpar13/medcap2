<%= form_with(model: sex, class: "contents") do |form| %>
  <% if sex.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(sex.errors.count, "error") %> prohibited this sex from being saved:</h2>

      <ul>
        <% sex.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <hr class="mt-6">

  <div class="my-5">
    <%= form.label :sex_name %>
    <%= form.text_field :sex_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :active %>
    <%= form.check_box :active, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-2 px-2 bg-cyan-800 text-white inline-block font-small cursor-pointer" %>
  </div>
<% end %>
