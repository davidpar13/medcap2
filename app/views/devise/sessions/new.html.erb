<div class="bg-gray-50 p-7 mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-xl text-cyan-800 mb-5 text-center">Welcome to MedCap</h1>
  <hr>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="text-right text-sm">
      New User? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-cyan-600" %>
    </div>
  <% end %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="grid grid-cols-1 gap-4 place-items-center">
      <div class="my-5">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border border-gray-200 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 place-items-center">
      <div class="my-5">
        <%= f.label :password %><br/>
        <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border border-gray-200 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <br><%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-cyan-800" %>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 place-items-center text-sm">
      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "text-gray-600" %>
        </div>
      <% end %>
    </div>


    <div class="grid grid-cols-1 gap-4 place-items-center mt-5">
      <div class="actions">
        <%= f.submit "Log in", class: "rounded-lg py-1 px-7 bg-cyan-800 text-white inline-block font-small cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>


