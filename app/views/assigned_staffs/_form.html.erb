<%= form_with(model: assigned_staff, class: "contents") do |form| %>
  <% if assigned_staff.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(assigned_staff.errors.count, "error") %> prohibited this assigned_staff from being saved:</h2>

      <ul>
        <% assigned_staff.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :active %>
    <%= form.check_box :active, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5" data-controller = "slim-select">
    <%= form.label :assigned_staff_type_id %>
    <%= form.select :assigned_staff_type_id, AssignedStaffType.all.collect {|a| [a.staff_type, a.id]}, { include_blank: "Select Type"}, { class: "", data: { slim_select_target: "stafftype" } } %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
