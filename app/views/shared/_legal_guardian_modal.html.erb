<div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
              <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal-title">Legal Guardian Details</h3>
              <div class="mt-2">
                <div class="grid grid-cols-3 gap-4 mb-5">
                  <div>
                    <p class="my-5">
                      <strong class="block font-medium mb-1 text-gray-500">Name</strong>
                      <%= legal_guardian.full_name %>
                    </p>
                  </div>
                  <div>
                    <p class="my-5">
                      <strong class="block font-medium mb-1 text-gray-500">Relationship</strong>
                      <%= legal_guardian.relationship_type %>
                    </p>
                  </div>
                  <div>
                    <p class="my-5">
                      <strong class="block font-medium mb-1 text-gray-500">Date of Birth</strong>
                      <%= legal_guardian.date_of_birth.strftime("%m/%d/%Y") %>
                    </p>
                  </div>
                  <div>
                    <p class="my-5">
                      <strong class="block font-medium mb-1 text-gray-500">Phone</strong>
                      <%= legal_guardian.phone %>
                    </p>
                  </div>
                  <div>
                    <p class="my-5">
                      <strong class="block font-medium mb-1 text-gray-500">Email</strong>
                      <%= legal_guardian.email %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          <button type="button" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto" data-action="click->modal#closeModal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
